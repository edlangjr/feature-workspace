{
  "name": "feature-workspace",
  "version": "0.0.0",
  "description": "Primary feature workspace",
  "author": "Ed Lang",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build:lib": "ng-packagr -p ./projects/feature-shared-components/ng-package.json",
    "create:sass:folders": "cd ./dist/feature-shared-components/src/lib && mkdir sass && cd ../../../..",
    "copy:sass": "cp ./projects/feature-shared-components/src/lib/sass/variables.scss ./dist/feature-shared-components/src/lib/sass/variables.scss" ,
    "build:schemas": "./node_modules/.bin/tsc -p ./projects/feature-shared-components/tsconfig.schematics.json",
    "watch:schemas": "./node_modules/.bin/tsc -p ./projects/feature-shared-components/tsconfig.schematics.json --watch",
    "copy:schemas": "cd ./projects/feature-shared-components || cp --parents schematics/*/schema.json ../../dist/feature-shared-components/ && cd ../..",
    "copy:files": "cd ./projects/feature-shared-components || cp --parents -p schematics/*/files/** ../../dist/feature-shared-components/ && cd ../..",
    "copy:collection": "cp ./projects/feature-shared-components/schematics/collection.json ./dist/feature-shared-components/schematics/collection.json",
    "schemas:postbuild": "npm run copy:schemas && npm run copy:files && npm run copy:collection",
    "pack:lib": "npm pack ./dist/feature-shared-components", 
    "create:pack:dir": "[ -d pack ] || mkdir pack",
    "move:pack": "mv ./*.tgz ./pack/",
    "pack:doit": "npm run pack:lib && npm run create:pack:dir && npm run move:pack",
    "publish:lib": "npm publish --registry http://localhost:4873 ./pack/feature-shared-components-1.0.0.tgz",
    "build:nopub": "npm run build:lib && npm run create:sass:folders && npm run copy:sass && npm run build:schemas && npm run schemas:postbuild && npm run pack:doit",
    "analyze": "ng build feature-micro-front-end --prod --statsJson=true && webpack-bundle-analyzer ./dist/feature-micro-front-end/stats-es2015.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~9.1.1",
    "@angular/common": "~9.1.1",
    "@angular/compiler": "~9.1.1",
    "@angular/core": "~9.1.1",
    "@angular/forms": "~9.1.1",
    "@angular/platform-browser": "~9.1.1",
    "@angular/platform-browser-dynamic": "~9.1.1",
    "@angular/router": "~9.1.1",
    "rxjs": "~6.5.4",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.901.7",
    "@angular-devkit/build-ng-packagr": "~0.901.5",
    "@angular/cli": "~9.1.1",
    "@angular/compiler-cli": "~9.1.1",
    "@angular/language-service": "~9.1.1",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.0",
    "karma-jasmine": "~3.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "ng-packagr": "^9.0.0",
    "protractor": "~5.4.3",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~3.8.3",
    "webpack-bundle-analyzer": "^3.7.0"
  }
}
